
:host{
  width: 100%;
}

.swiper-container{
  position: relative;
}

.swiper-container .swiper{
  height: 300rpx;
}

.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}

.swiper-container .dots{
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.swiper-container .dots .dot{
  background-color: rgba(255, 255, 255, 0.4);
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  transition: all .6s;
  font: 300 18rpx/28rpx "microsoft yahei"; 
  text-align: center;
  margin-right: 20rpx; 
}

.swiper-container .dots .dot.active{  
  background: #f80;  
}  