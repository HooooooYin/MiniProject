}



/*处理中  */
.notice_status2{
    /*Box model  */
  margin-top: 10rpx;

  /*Typographic  */
  font-size: 10pt;

  /*Visual  */  
  color: #0000cd;
}

/*处理中图  */
.notice_status2 image{
  /*Box model  */
  width:25rpx;
  height:25rpx;
  border-radius:50%;
  
  /*Visual  */  
  background-color:#0000cd;  
