/*箭头  */
.arrow{
  /*Positioning  */
  float: right;
  
  /*Box model  */
  width: 15rpx;
  height: 15rpx;
  border-top: 2px solid #a9a9a9;
  border-right: 2px solid #a9a9a9;

  /*Visual  */
  transform: rotate(45deg);
}
