/* pages/orderlist/orderlist.wxss */
/*页面  */
page{
  /*Box model  */
  width: 100%;
  height: 100%;

  /*Visual */
  background-color: #f3f5f7;
}

/*支付页面头部  */
.pay-header{
  /*Box model */
  display:flex;
  flex-direction:column;
  padding:50rpx;
  
  /*Typographic */
  font-size: 18pt;
  font-weight: 500;

  /*Visual */
  background-color:#ff8c00;
  color:#ffffff;
}

/*支付页面说明副标题  */
.pay-header text:last-child{
  /*Typographic  */
  font-size: 12pt;
  font-weight: 400;
}



/*订单内容  */
.order{
  /*Box model  */
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
  padding: 30rpx;

  /*Typographic  */
  justify-content: space-between;
  align-items: flex-start;

  /*Visual  */
  background-color: #ffffff;
}

/*订单左侧信息  */
.order-left{
  /*Box model  */
  display: flex;
  flex-direction: column;
}

/*订单标题  */
.order-left .order-title{
  /*Box model  */
  margin-bottom: 20rpx;

  /*Typographic  */
  font-size: 14pt;
}



/*订单详情  */
.order-left .order-detail{
  /*Typographic  */
  font-size:10pt;

  /*Visual  */
  color:#929292;
}



/*订单右侧信息  */
.order-right{
  /*Box model  */
  display: flex;
  flex-direction: column;
}

/*等待支付字样  */
.order-right text:first-child{
  /*Box model  */
  margin-bottom:30rpx;
  
  /*Typographic  */
  font-size:12pt;
  text-align: right;
  
  /*Visual  */
  color:#ffd700;
}



/*订单价格  */
.order-right .order-price{
  /*Box model  */
  margin-bottom:15rpx;

  /*Typographic  */
  font-size:12pt;
  text-align:right;
}

/*订单支付按钮  */
.order-right view{
  /*Box model  */
  width: 150rpx;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;

  /*Typographic  */
  font-size: 12pt;
  text-align: center;

  /*Visual  */
  background-color: #ff6347;
  color: #ffffff;
}