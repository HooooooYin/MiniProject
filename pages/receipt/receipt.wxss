page{
  /*Box model  */
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;

  /*Typographic  */
  justify-content: flex-start;
  align-items: center;
}

/*发票展示页容器  */
.container{
  /*Box model  */
  width:90%;
  height: auto;
  box-sizing:border-box;
  display:flex;
  flex-direction:column;
  padding: 0;
  border-radius: 35rpx;
  box-shadow: 0px 0px 50rpx #ffbc21;
  margin-top: 40rpx;

  /*Typographic  */
  justify-content: center;
  align-items: center;
}

/*页面标题  */
.title{
  /*Box model  */
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 30rpx;
  box-sizing:border-box;
  border-radius: 35rpx 35rpx 0 0;

  /*Tygraphic  */
  justify-content: space-between;
  font-size: 10pt;

  /*Visual  */
  color: #ffffff;
  background-color: #ffbc21;
}



/*主体  */
.body{
  /*Box model  */
  width: 100%;
  box-sizing: border-box;
}

/*顶部  */
.heading{
  /*Box model  */
  display: flex;
  width: 100%;
  flex-direction: row;
  box-sizing: border-box;
  padding: 40rpx;
  border-bottom: 1px solid #f5f5f5;
}

/*顶部item左侧  */
.heading .heading-left{
  /*Box model  */
  width: 40%;
  height: 100rpx;
  display: flex;
  
  /*Typographic  */
  justify-content: flex-start;
  align-items: center;
}

/*左侧沙漏图片  */
.heading .heading-left image{
  /*Box model  */
  height: 100rpx;
  width: 100rpx;
}



/*顶部item右侧  */
.heading .heading-right{
  /*Box model  */
  width: 60%;
  display: flex;
  flex-direction: column;
}

/*顶部第一个文本  */
.heading .heading-right text:first-child{
  /*Box model  */
  margin-bottom: 10rpx;

  /*Typographic  */
  font-size: 14pt;

  /*Visual  */
  color: #ffbc21;
}



/*顶部提示信息  */
.heading .heading-right text:last-child{
  /*Typographic  */
  font-size: 10pt;

  /*Visual  */
  color: #929292;
}



/*主体条目  */
.body-item{
  /*Box model  */
  display: flex;
  flex-direction: row;
  width:100%;
  box-sizing:border-box;
  padding:20rpx 40rpx;
  border-bottom: 1px solid #f5f5f5;
}

/*条目标题  */
.item-title{
  /*Box model  */
  width: 40%;

  /*Typographic  */
  font-size: 12pt;

  /*Visual  */
  color: #929292;
}



/*条目内容  */
.item-detail{
  /*Box model  */
  width: 60%;

  /*Typographic  */
  font-size: 12pt;
}



/*条目最后一项  */
.body-item:last-child{
  margin-bottom: 80rpx;
}