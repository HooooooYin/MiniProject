/* pages/remark/remark.wxss */
page{
  /*Box model  */
  display: flex;
  flex-direction: column;

  /*Typographic  */
  justify-content: center;
  align-items: center;

  /*Visual  */
  background-color: #f3f5f7
}

/*输入框容器  */
.text-container{
  /*Box model  */
  width: 100%;
  margin-top: 50rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  
  /*Typographic  */
  justify-content: center;

  /*Visual  */
  background-color: #ffffff
}

/*备注标题  */
.text-container text{
  /*Box model  */
  margin: 30rpx 0;

  /*Typographic  */
  font-size: 12pt;
}



/*标签组  */
.tab_group{
  /*Box model  */
  display:flex;
  flex-direction:row;
  width: 300rpx;

  /*Typographic  */
  flex-wrap:wrap;
  justify-content:flex-start;
  align-items: flex-start;
}

/*标签  */
.tab{
  /*Box model  */
  border:1px solid #dcdcdc;
  box-sizing:border-box;
  padding:10rpx;
  margin:0 10rpx 10rpx 0;

  /*Typographic  */
  font-size:12pt;
}



/*被选中的标签  */
.tab_group .selected{
  /*Visual  */
  border-color: #ffd700;
  color: #ffd700;
  background-color: #fbf4d8;
}



/*备注文本框  */
.text-container textarea{
  /*Box model  */
  border: 1px solid #929292;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  overflow: scroll;
  margin-bottom: 20rpx;

  /*Typographic  */
  font-size: 12pt;

  /*Visual  */
  background-color: #f3f5f7;
}



/*确认按钮  */
.confirm-btn{
  /*Box model  */
  margin: 50rpx 0;
  width:90%;
  border-radius:30rpx;
  padding:15rpx;

  /*Typographic  */
  text-align:center;
  font-size:12pt;

  /*Visual  */
  background-color:#ffd700;
  color:#ffffff;
}



/*取消按钮  */
.cancel-btn{
  /*Box model  */
  width:90%;
  padding:15rpx;
  border: 1px solid #dcdcdc;
  border-radius:30rpx;

  /*Typographic  */
  font-size:12pt;
  text-align:center;

  /*Visual  */
  background-color:#ffffff;
}