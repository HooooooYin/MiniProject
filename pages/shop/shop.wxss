/* pages/shop/shop.wxss */
/*页面  */
page{
  /*Box model  */
  width: 100%;
  height: 100%;
  display: flex;
  
  /*Typographic  */
  flex-direction: column;
}

/*页面头部  */
.shop-header{
  /*Box model  */
  display: flex;
  padding: 20rpx 20rpx 50rpx 20rpx;

  /*Typographic  */
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;

  /*Visual  */
  color: #fff;
  background-color: #ff8c00;
}

/*头部图标  */
.shop-header-icon{
  /*Box model  */
  height:100rpx;
  width:100rpx;
  padding:20rpx;
  border-radius:50%;

  /*Visual  */
  background-color:#ffa500;
}



/*头部信息  */
.shop-header-detail{
  /*Box model  */
  margin: 20rpx;
}

/*头部标题  */
.shop-header-title{
  /*Typographic  */
  font-size: 18pt;
}



/*头部说明  */
.shop-header-text{
  /*Typographic  */
  font-size: 10pt;
}



/*页面主体  */
.shop-body{
  /*Box model  */
  display: flex;
  height: 100%;

  /*Typographic  */
  flex-direction: row;
}

/*主体左侧栏  */
.shop-body-left{
  /*Box model  */
  width: 20%;
  height: 100%;

  /*Visual  */
  background-color: #f6f8f9;
}

/*左侧栏分类  */
.shop-type{
  /*Box model  */
  border-top: 1px solid #dcdcdc;
  height: 100rpx;

  /*Typographic  */
  text-align: center;
  line-height: 100rpx;
}



/*左侧栏被选中的分类  */
.shop-body-left .selected{
  /*Box model  */
  border-right: 1px solid #dcdcdc;

  /*Visual  */
  background-color: #fdfdfd;
}



/*主体右侧栏  */
.shop-body-right{
  /*Positioning  */
  position: relative;
  /*Box model  */
  width: 80%;
  height: 100%;

  /*Visual  */
  background-color: #fff;
}



/*右侧栏标题  */
.shop-body-title{
  /*Positioning */
  position: absolute;
  top: 0;
  left: 0;

  /*Box model */
  padding-left: 50rpx;
  border-left: 5px solid #dcdcdc;
  width: 100%;
  height: 45rpx;

  /*Typographic */
  line-height: 45rpx;
  font-size: 10pt;

  /*Visual */
  background-color: #f6f8f9;
}



/*右侧栏商品列表  */
.shop-body-group{
  /*Box model  */
  margin-top: 50rpx;
}

/*商品  */
.shop-good{
  /*Box model  */
  margin: 20rpx;
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #dcdcdc;

  /*Typographic  */
  flex-direction: row;
}

/*商品图片容器  */
.good-pic-container{
  /*Box model  */
  width: 150rpx;
  height: 150rpx;
  border: 1px #dcdcdc solid;
  display: flex;

  /*Typographic  */
  justify-content: center;
  align-items: center;
}

/*商品图片  */
.good-pic{
  /*Box model  */
  width: 150rpx;
  height: 150rpx;
}



/*商品详情  */
.shop-good-detail{
  /*Positioning  */
  position: relative;

  /*Box model  */
  display: flex;
  margin: 0 20rpx; 
  width: 100%;

  /*Typographic  */
  flex-direction: column;
  font-size: 10pt;

  /*Visual  */
  color: #a9a9a9;
}

/*商品题目  */
.shop-good-title{
  /*Typographic  */
  font-size: 12pt;
  
  /*Visual  */
  color: #000;
}



/*商品价格  */
.shop-good-price{
  /*Typographic  */
  font-size: 12pt;

  /*Visual  */
  color: #ff0000;
}



/*商品购买数量  */
.shop-buy-num{
  /*Positioning  */
  position: absolute;
  right: 0;
  bottom: 0;

  /*Box model  */
  display: flex;
  flex-direction: row;

  /*Typographic  */
  font-size: 0;
  line-height:40rpx;

  /*Visual  */
  color: #000;
}

.shop-buy-num view{
  /*Typographic  */
  line-height:40rpx;
  font-size: 14pt;
}



/*减号  */
.good-sub{
  /*Box model  */
  border:1px solid #c0c0c0;
  height: 40rpx;
  width: 40rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;

  /*Typographic  */
  font-weight: 700;
  line-height: 40rpx;
  text-align: center;
  font-size: 18pt;
  
  /*Visual  */
  color: #808080;
}



/*加号  */
.good-add{
  /*Box model */
  border: 1px solid #ff8c00;
  height: 36rpx;
  width: 34rpx;
  border-radius: 40rpx;
  margin-left: 20rpx;
  /*Typographic */
  line-height: 40rpx;
  text-align: center; 
  font-size: 18pt;
  /*Visual */
  background-color: #ff8c00;
  color: #fff;
}



/*支付栏  */
.shopping-car{
  /*Positioning  */
  z-index: 1000;
  position: relative;

  /*Box model  */
  display: flex;
  flex-direction: row;

  /*Visual  */
  background-color: #696969;
}

/*购物车图标上的红点  */
.note{
  /*Positioning  */
  position: absolute;
  top: -30%;
  left: 15%;

  /*Box model  */
  width:30rpx;
  height:30rpx;
  border-radius:50%;

  /*Typographic  */
  font-size:8pt;
  text-align:center;
  line-height:30rpx;

  /*Visual  */
  color:#fff;
  background-color:#ff4500;  
}



/*购物车图标  */
.shopping-icon{
  /*Box model  */
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  border-radius: 50%;

  /*Visual  */
  background-color: #ffa500;
  transform: translate(20rpx, -60rpx);
}



/*中间总价栏  */
.bill{
  /*Box model  */
  display: flex;
  margin-left: 50rpx;
  width: 450rpx;

  /*Typographic  */
  flex-direction: column;
}

/*总价说明  */
.bill text{
  /*Typographic  */
  font-size: 10pt;

  /*Visual  */
  color: #fff;
}



/*金额  */
.bill .money{
  /*Typographic  */
  font-size: 18pt;

  /*Visual  */
  color: #ff8c00;
}



/*支付按钮  */
.shopping-btn{
  /*Box model  */
  width: 200rpx; 
  display: flex;

  /*Typographic  */
  text-align: center; 
  font-size: 14pt;
  justify-content: center;
  align-items: center;

  /*Visual  */
  background-color: #ff4500;
}



/*遮罩层  */
.mask{
  /*Positioning  */
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 888;

  /*Visual  */
  background-color: rgba(0, 0, 0, 0.3);
}



/*购物车弹出框  */
.shop-car{
  /*Positioning  */
  z-index: 999;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 114rpx;

  /*Box model  */
  padding-bottom: 50rpx;
  display: flex;

  /*Typographic  */
  flex-direction: column;
  
  /*Visual  */
  background-color: #fff;
}

/*购物车标题  */
.shop-car .title{
  /*Box model  */
  padding:10rpx 30rpx;

  /*Typographic  */
  font-size:10pt;

  /*Visual  */
  background-color:#f5f5f5;
}



/*购物车条目  */
.shop-car .shop-car-item{
  /*Box model  */
  display: flex;  
  margin: 30rpx;  
  padding-bottom: 10rpx;
  border-bottom: 1px solid #dcdcdc;

  /*Typographic  */
  flex-direction: row;

  /*Visual  */
  background-color: #fff;
}

/*购物车条目左边部分  */
.item-left{
  /*Box model  */
  width: 325rpx;
  display: flex;

  /*Typographic  */
  flex-direction: column;
}

/*购物车条目名称  */
.item-left text{
  /*Typographic  */
  font-size: 12pt;
}



/*购物车条目副标题  */
.item-left text:last-child{
  /*Visual  */
  color: #a5a5a5;
}



/*价格  */
.item-middle{
  /*Box model  */
  width: 200rpx;
  font-size: 11pt;
}



/*购物车条目右侧  */
.item-right{
  /*Box model  */
  width: 200rpx;
  display: flex;
  flex-direction: row;

  /*Typographic  */
  justify-content: center;
  align-items: center;
}

/*减号  */
.item-right view:first-child{
  /*Box model  */
  border:1px solid #c0c0c0;
  height:30rpx;
  width:30rpx;
  border-radius:50%;
  margin: 0 20rpx;

  /*Typographic  */
  line-height:25rpx;
  text-align: center;
  font-weight: 700;
  font-size: 16pt;
  
  /*Visual  */
  color: #808080;
}



/*加号  */
.item-right view:last-child{
  /*Box model  */
  border: 1px #ffd700 solid;
  height:30rpx;
  width:30rpx;
  border-radius:50%;
  margin: 0 20rpx;
  
  /*Typographic  */
  line-height:25rpx;
  text-align: center;
  font-weight: 700;
  font-size: 16pt;

  /*Visual  */
  color: #fff;
  background-color: #ffd700;
}